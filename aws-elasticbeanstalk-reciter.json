{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Resources": {
        "AppInstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "InstanceProfileName": {
                    "Fn::Sub": "${AWS::StackName}-reciterInstanceProfile"
                },
                "Path": "/",
                "Roles": [
                    {
                        "Fn::ImportValue": {
                            "Fn::Sub": "${elasticBeanStalkRoleStackName}-elasticBeanStalkWebServerRole"
                        }
                    }
                ]
            }
        },
        "application": {
            "Type": "AWS::ElasticBeanstalk::Application",
            "Properties": {
                "Description": "Application Description",
                "ApplicationName": {
                    "Ref": "ApplicationName"
                }
            }
        },
        "applicationVersion": {
            "Type": "AWS::ElasticBeanstalk::ApplicationVersion",
            "Properties": {
                "ApplicationName": {
                    "Ref": "application"
                },
                "Description": "AWS ElasticBeanstalk Application Version",
                "SourceBundle": {
                    "S3Bucket": { "Fn::Join": [ "-", [ "elasticbeanstalk-samples", { "Ref": "AWS::Region" } ] ] },
                    "S3Key": "java-sample-app.zip"
                }
            }
        },
        "BeanstalkSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Allow the Elastic Beanstalk instances to access the NAT device",
                "VpcId": {
                    "Fn::ImportValue": {
                        "Fn::Sub": "${NetworkStackName}-vpcID"
                    }
                },
                "Tags": [
                    {
                        "Key": "StackName",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    },
                    {
                        "Key": "venue",
                        "Value": "reciter-workshop"
                    }
                ]
            }
        },
        "sampleEnvironment": {
            "DependsOn": [
                "application"
            ],
            "Type": "AWS::ElasticBeanstalk::Environment",
            "Properties": {
                "ApplicationName": {
                    "Ref": "ApplicationName"
                },
                "EnvironmentName": {
                    "Ref": "EnvironmentName"
                },
                "Description": "AWS ElasticBeanstalk Sample Environment",
                "VersionLabel": {
                    "Ref": "applicationVersion"
                },
                "CNAMEPrefix": {
                    "Ref": "ApplicationCNAME"
                },
                "SolutionStackName": "64bit Amazon Linux 2018.03 v2.10.4 running Java 8",
                "OptionSettings": [
                    {
                        "Namespace": "aws:elasticbeanstalk:environment:process:default",
                        "OptionName": "HealthCheckInterval",
                        "Value": "60"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:environment:process:default",
                        "OptionName": "HealthCheckPath",
                        "Value": "/swagger-ui.html"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:environment:process:default",
                        "OptionName": "HealthCheckTimeout",
                        "Value": "20"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:environment:process:default",
                        "OptionName": "HealthyThresholdCount",
                        "Value": "5"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:environment:process:default",
                        "OptionName": "UnhealthyThresholdCount",
                        "Value": "8"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:cloudwatch:logs",
                        "OptionName": "StreamLogs",
                        "Value": "true"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:cloudwatch:logs",
                        "OptionName": "DeleteOnTerminate",
                        "Value": "true"
                    },
                    {
                        "Namespace": "aws:autoscaling:launchconfiguration",
                        "OptionName": "InstanceType",
                        "Value": "t2.micro"
                    },
                    {
                        "Namespace": "aws:autoscaling:launchconfiguration",
                        "OptionName": "IamInstanceProfile",
                        "Value": {
                            "Ref": "AppInstanceProfile"
                        }
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:environment",
                        "OptionName": "ServiceRole",
                        "Value": {
                            "Fn::ImportValue": {
                                "Fn::Sub": "${elasticBeanStalkRoleStackName}-elasticBeanStalkServiceRole"
                            }
                        }
                    },
                    {
                        "Namespace": "aws:autoscaling:launchconfiguration",
                        "OptionName": "SecurityGroups",
                        "Value": {
                            "Ref": "BeanstalkSecurityGroup"
                        }
                    },
                    {
                        "Namespace": "aws:autoscaling:asg",
                        "OptionName": "MinSize",
                        "Value": "1"
                    },
                    {
                        "Namespace": "aws:autoscaling:asg",
                        "OptionName": "MaxSize",
                        "Value": "1"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:environment",
                        "OptionName": "EnvironmentType",
                        "Value": "LoadBalanced"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:environment",
                        "OptionName": "LoadBalancerType",
                        "Value": "application"
                    },
                    {
                        "Namespace": "aws:ec2:vpc",
                        "OptionName": "VPCId",
                        "Value": {
                            "Fn::ImportValue": {
                                "Fn::Sub": "${NetworkStackName}-vpcID"
                            }
                        }
                    },
                    {
                        "Namespace": "aws:ec2:vpc",
                        "OptionName": "ELBSubnets",
                        "Value": {
                            "Fn::Join": [
                                ",",
                                [
                                    {
                                        "Fn::ImportValue": {
                                            "Fn::Sub": "${NetworkStackName}-subnetpubazadmz"
                                        }
                                    },
                                    {
                                        "Fn::ImportValue": {
                                            "Fn::Sub": "${NetworkStackName}-subnetpubazbdmz"
                                        }
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Namespace": "aws:ec2:vpc",
                        "OptionName": "Subnets",
                        "Value": {
                            "Fn::Join": [
                                ",",
                                [
                                    {
                                        "Fn::ImportValue": {
                                            "Fn::Sub": "${NetworkStackName}-subnetpriazaapp"
                                        }
                                    },
                                    {
                                        "Fn::ImportValue": {
                                            "Fn::Sub": "${NetworkStackName}-subnetpriazbapp"
                                        }
                                    }
                                ]
                            ]
                        }
                    },
                    {
                        "Namespace": "aws:ec2:vpc",
                        "OptionName": "ELBScheme",
                        "Value": "public"
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:application:environment",
                        "OptionName": "AMAZON_AWS_ACCESS_KEY",
                        "Value": {
                            "Ref": "ApplicationReciterEnvAMAZONAWSACCESSKEY"
                        }
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:application:environment",
                        "OptionName": "AMAZON_AWS_SECRET_KEY",
                        "Value": {
                            "Ref": "ApplicationReciterEnvAMAZONAWSSECRETKEY"
                        }
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:application:environment",
                        "OptionName": "AMAZON_DYNAMODB_ENDPOINT",
                        "Value": {
                            "Ref": "ApplicationReciterEnvAMAZONDYNAMODBENDPOINT"
                        }
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:application:environment",
                        "OptionName": "PUBMED_SERVICE",
                        "Value": {
                            "Fn::If": [
                                "HasApplicationReciterEnvPUBMEDSERVICE",
                                {
                                    "Ref": "ApplicationReciterEnvPUBMEDSERVICE"
                                },
                                {
                                    "Ref": "AWS::NoValue"
                                }
                            ]
                        }
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:application:environment",
                        "OptionName": "SCOPUS_SERVICE",
                        "Value": {
                            "Fn::If": [
                                "HasApplicationReciterEnvSCOPUSSERVICE",
                                {
                                    "Ref": "ApplicationReciterEnvSCOPUSSERVICE"
                                },
                                {
                                    "Ref": "AWS::NoValue"
                                }
                            ]
                        }
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:application:environment",
                        "OptionName": "ADMIN_API_KEY",
                        "Value": {
                            "Ref": "ApplicationReciterEnvADMINAPIKEY"
                        }
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:application:environment",
                        "OptionName": "CONSUMER_API_KEY",
                        "Value": {
                            "Ref": "ApplicationReciterEnvCONSUMERAPIKEY"
                        }
                    },
                    {
                        "Namespace": "aws:elasticbeanstalk:application:environment",
                        "OptionName": "SERVER_PORT",
                        "Value": {
                            "Ref": "ApplicationReciterEnvSERVERPORT"
                        }
                    }
                ],
                "Tags": [
                    {
                        "Key": "StackName",
                        "Value": {
                            "Ref": "AWS::StackName"
                        }
                    },
                    {
                        "Key": "venue",
                        "Value": "reciter-workshop"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "ReciterEndpointURL": {
            "Description": "The URL of the Web Application",
            "Value": {
                "Fn::Join": [
                    "",
                    [
                        "http://",
                        {
                            "Fn::GetAtt": [
                                "sampleEnvironment",
                                "EndpointURL"
                            ]
                        }
                    ]
                ]
            }
        }
    },
    "Parameters": {
        "NetworkStackName": {
            "Description": "Name of an active CloudFormation stack of networking resources",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$"
        },
        "ApplicationName": {
            "Description": "Application name for the application",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$"
        },
        "EnvironmentName": {
            "Description": "Environment name for the elastic beanstalk",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$"
        },
        "ApplicationCNAME": {
            "Description": "CNAME for the application",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$"
        },
        "elasticBeanStalkRoleStackName": {
            "Description": "Role stack name from elasticbeanstalk role stack",
            "Type": "String"
        },
        "ApplicationReciterEnvAMAZONAWSACCESSKEY": {
            "Description": "AMAZON_AWS_ACCESS_KEY environment variable for ReCiter Tool for dynamodb, s3 and sqs access",
            "Type": "String"
        },
        "ApplicationReciterEnvAMAZONAWSSECRETKEY": {
            "Description": "AMAZON_AWS_SECRET_KEY environment variable for ReCiter Tool for dynamodb, s3 and sqs access",
            "Type": "String"
        },
        "ApplicationReciterEnvAMAZONDYNAMODBENDPOINT": {
            "Description": "AMAZON_DYNAMODB_ENDPOINT environment variable for ReCiter Tool for dynamodb, s3 and sqs access",
            "Type": "String"
        },
        "ApplicationReciterEnvPUBMEDSERVICE": {
            "Description": "PUBMED_SERVICE environment variable for ReCiter Tool to access Pubmed retrieval tool",
            "Type": "String"
        },
        "ApplicationReciterEnvSCOPUSSERVICE": {
            "Description": "SCOPUS_SERVICE environment variable for ReCiter Tool to access Scopus retrieval tool",
            "Type": "String"
        },
        "ApplicationReciterEnvADMINAPIKEY": {
            "Description": "ADMIN_API_KEY environment variable for ReCiter Tool if security is enabled for Reciter",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "admin"
        },
        "ApplicationReciterEnvCONSUMERAPIKEY": {
            "Description": "CONSUMER_API_KEY environment variable for ReCiter Tool if security is enabled for Reciter",
            "Type": "String",
            "MinLength": 1,
            "MaxLength": 255,
            "AllowedPattern": "^[a-zA-Z][-a-zA-Z0-9]*$",
            "Default": "consumer"
        },
        "ApplicationReciterEnvSERVERPORT": {
            "Description": "SERVER_PORT environment variable for ReCiter Tool",
            "Type": "Number",
            "Default": "5000"
        }
    },
    "Conditions": {
        "HasApplicationReciterEnvSCOPUSSERVICE": {
            "Fn::Not": [
                {
                    "Fn::Equals": [
                        "",
                        {
                            "Ref": "ApplicationReciterEnvSCOPUSSERVICE"
                        }
                    ]
                }
            ]
        },
        "HasApplicationReciterEnvPUBMEDSERVICE": {
            "Fn::Not": [
                {
                    "Fn::Equals": [
                        "",
                        {
                            "Ref": "ApplicationReciterEnvPUBMEDSERVICE"
                        }
                    ]
                }
            ]
        }
    }
}
